<Page x:Class="RepertorizacaoHome.pages.CustomMessageBox"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RepertorizacaoHome.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomMessageBox">

    <Grid>
        <Rectangle Fill="Black" Opacity="0.6"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Rectangle Fill="White" RadiusX="10" RadiusY="10"/>
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="{Binding MessageBox.Message, FallbackValue=Mensagem a ser exibida}" HorizontalAlignment="Center"/>

                <Grid Margin="0,5,0,0" MouseDown="BtnOk_MouseDown" Width="100" Grid.Row="1">
                    <Rectangle Fill="LightGreen" RadiusX="10" RadiusY="10" Stroke="Black" StrokeThickness="1"/>
                    <TextBlock Text="Ok" Margin="5" TextAlignment="Center" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
